<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="pt.org.aguiaj.objectWidgets">
      <group
            id="Image examples">
         <class
               allowImport="true"
               id="aguiaj.iscte.Color">
         </class>
         <class
               allowImport="true"
               id="aguiaj.iscte.BinaryImage">
         </class>
         <class
               allowImport="true"
               id="aguiaj.iscte.GrayscaleImage">
         </class>
         <class
               allowImport="true"
               id="aguiaj.iscte.Dimension">
         </class>
         <class
               allowImport="true"
               id="aguiaj.iscte.ColorImage">
         </class>
         <class
               allowImport="false"
               id="aguiaj.iscte.ImageUtils">
         </class>
      </group>
   </extension>
   <extension
         point="org.eclipse.ui.viewActions">
      <viewContribution
            id="pt.org.aguiaj.draw.examples.addImage"
            targetID="pt.org.aguiaj.objectsView">
         <action
               class="aguiaj.iscte.contribution.ImportImageAction"
               icon="images/image.png"
               id="AguiaJColorAndImagesPlugin.action1"
               label="Import image"
               style="push"
               toolbarPath="additions">
         </action>
      </viewContribution>
   </extension>

</plugin>
