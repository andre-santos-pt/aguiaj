<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="pt.org.aguiaj.rcp.AguiaJApplication">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="pt.org.aguiaj.rcp.application"
            name="AGUIA/J">
         <property
               name="appName"
               value="AGUIA/J">
         </property>
         <property
               name="aboutImage"
               value="platform:/plugin/pt.org.aguiaj.branding/icons/eagle-icon-96.png">
         </property>
         <property
               name="aboutText"
               value="AGUIA/J was created and is currently being developed by AndrÃ© L. Santos ( http://www.andre-santos.name ), ISCTE-IUL ( http://www.iul.pt ), Portugal.">
