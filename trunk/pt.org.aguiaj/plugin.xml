<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="objectWidgets" name="Object Widgets" schema="schema/objectWidgets.exsd"/>
   <extension-point id="accessorDetectionPolicies" name="Accessor Detection Policies" schema="schema/accessorDetectionPolicies.exsd"/>
   <extension-point id="languages" name="Languages" schema="schema/languages.exsd"/>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="pt.org.aguiaj.core.AguiaJPerspective"
            icon="images/eagle-icon-16.png"
            id="pt.org.aguiaj.perspective"
            name="AGUIA/J">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="pt.aguiaj.viewCategory"
            class="pt.org.aguiaj.objects.ObjectsView"
            icon="images/elements_obj.gif"
            id="pt.org.aguiaj.objectsView"
            name="Objects">
      </view>
      <view
            allowMultiple="false"
            category="pt.aguiaj.viewCategory"
            class="pt.org.aguiaj.classes.ClassesView"
            icon="images/classes.gif"
            id="pt.org.aguiaj.classesView"
            name="Classes"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="pt.aguiaj.viewCategory"
            class="pt.org.aguiaj.core.commands.JavaBarView"
            icon="images/java.png"
            id="pt.org.aguiaj.javabarView"
            name="Java Bar"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            category="pt.aguiaj.viewCategory"
            class="pt.org.aguiaj.core.commands.HistoryView"
            icon="images/history_view.gif"
            id="pt.org.aguiaj.historyView"
            name="History"
            restorable="true">
      </view>
      <view
            category="pt.aguiaj.viewCategory"
            class="pt.org.aguiaj.core.DocumentationView"
            icon="images/javadoc.gif"
            id="pt.org.aguiaj.documentationView"
            name="Documentation"
            restorable="true">
      </view>
      <category
            id="pt.aguiaj.viewCategory"
            name="AGUIA/J">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="pt.org.aguiaj.core.commands.ReloadClassesCommand"
            id="AguiaJ.reloadcommand"
            name="Reload classes">
      </command>
      <command
            defaultHandler="pt.org.aguiaj.core.TranslationEditor$Open"
            id="AguiaJ.openTranslationTable"
            name="Define Translation">
      </command>d>
      <command
            defaultHandler="pt.org.aguiaj.core.commands.HistoryView$Open"
            id="AguiaJ.openHistory"
            name="Open History view">
      </command>
      <command
            defaultHandler="pt.org.aguiaj.core.commands.HistoryView$Open"
            id="AguiaJ.openDocumentation"
            name="Open Documentation view">
      </command>
      <command
            defaultHandler="pt.org.aguiaj.core.commands.OpenFeedbackForm"
            id="AguiaJ.feedbackForm"
            name="Open feedback form">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="AguiaJ.reloadcommand"
            schemeId="AguiaJ.scheme"
            sequence="CTRL+r">
      </key>
      <scheme
            id="AguiaJ.scheme"
            name="Aguia/J scheme">
      </scheme>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="pt.org.aguiaj.core.AguiaJPreferencePage"
            id="AguiaJ.preferences"
            name="AGUIA/J">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="pt.org.aguiaj.core.AguiaJPreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="pt.org.aguiaj.accessorDetectionPolicies">
      <policy
            description="Prefixes get* to*, and is* for boolean return types"
            id="pt.org.aguiaj.standard.GetIsAccessorPolicy">
      </policy>
      <policy
            description="No accessor methods are detected"
            id="pt.org.aguiaj.standard.NoAccessorMethodsPolicy">
      </policy>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="AguiaJ.menu"
               label="AGUIA/J">
            <command
                  commandId="AguiaJ.feedbackForm"
                  icon="images/mail.gif"
                  label="Open feedback form..."
                  style="push">
            </command>
            <command
                  commandId="AguiaJ.openDocumentation"
                  icon="images/javadoc.gif"
                  label="Show Documentation view"
                  style="push">
            </command>
            <command
                  commandId="AguiaJ.openHistory"
                  icon="images/history_view.gif"
                  label="Show History view"
                  style="push">
            </command>
            <command
                  commandId="AguiaJ.openTranslationTable"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         name="Standard types"
         point="pt.org.aguiaj.objectWidgets">
      <group
            id="java.lang">
         <class
               allowImport="false"
               id="java.lang.Integer">
         </class>
         <class
               allowImport="false"
               id="java.lang.Character">
         </class>
         <class
               allowImport="false"
               id="java.lang.Double">
         </class>
         <class
               allowImport="false"
               id="java.lang.Boolean">
         </class>
         <class
               allowImport="false"
               id="java.lang.Enum">
            <excludeFilter>
               <method
                     id="ordinal">
               </method>
               <method
                     id="getDeclaringClass">
               </method>
               <method
                     id="hashCode">
               </method>
            </excludeFilter>
            <promoteToAccessor>
               <method
                     id="name">
               </method>
            </promoteToAccessor>
         </class>
         <class
               allowImport="false"
               id="java.lang.String"
               viewClass="pt.org.aguiaj.standard.extensions.StringObjectWidget">
            <promoteToAccessor>
               <method
                     id="length">
               </method>
            </promoteToAccessor>
            <includeFilter>
               <method
                     id="substring">
               </method>
               <method
                     id="trim">
               </method>
               <method
                     id="charAt">
               </method>
               <method
                     id="concat">
               </method>
               <method
                     id="compareTo">
               </method>
               <method
                     id="toCharArray">
               </method>
            </includeFilter>
         </class>
         <class
               allowImport="false"
               id="java.lang.Math">
         </class>
      </group>
   </extension>

</plugin>
